---
import Logo from "../assets/svgs/Logo.astro";

const { black = true } = Astro.props;
---

<footer
  class={`flex flex-col items-start w-full py-4 md:py-8 ${black ? "bg-neutral-800 text-white" : "text-black bg-white"}`}
>
  <div class="px-4 sm:px-6 md:px-8 container mx-auto">
    <div
      class={`w-full border-t-2 border-dashed ${black ? "border-white" : "border-black"} mt-4 md:mt-7`}
    >
    </div>
    <div
      class="flex flex-col sm:flex-row gap-y-8 sm:gap-0 justify-between w-full mt-4"
    >
      <a href="/" class="w-32 sm:w-36 md:w-40 h-full fill-white mt-2"
        ><Logo black={!black} /></a
      >

      <div class="flex flex-col items-end w-full gap-4 sm:gap-8">
        <p
          class="text-3xl md:text-4xl lg:text-5xl text-end text-balance max-w-none md:max-w-md font-bold font-heading uppercase"
          style="filter: url(#threshold)"
        >
          Pensar el presente. Publicar sin concesiones.
        </p>
        <a
          href="mailto:brunogalberti@gmail.com"
          class="flex justify-end text-center w-full max-w-xs md:max-w-sm group cursor-pointer"
          ><span
            class={`w-full max-w-md md:max-w-lg py-2 rounded-[.2rem]  border border-dashed border-transparent group-hover:bg-transparent ${black ? "bg-white text-black group-hover:border-white group-hover:text-white" : "bg-black text-white group-hover:border-black group-hover:text-black"} transition-colors duration-300`}
            >Proponer una colaboración</span
          ></a
        >
      </div>
    </div>
  </div>
  <div
    class="px-4 sm:px-6 md:px-8 container mx-auto flex flex-col sm:flex-row gap-4 sm:gap-0 justify-between w-full pt-16"
  >
    <div
      class="flex items-center justify-between gap-2 sm:gap-5 w-full sm:w-auto leading-5"
    >
      <p class="uppercase font-heading">
        Revista Parrhesia © 2026<br />Todos los derechos reservados
      </p>
      <button
        id="top-button"
        aria-label="Volver arriba"
        class={`py-2 px-2 sm:px-4 rounded-[.2rem] cursor-pointer  border border-dashed border-transparent hover:bg-transparent ${black ? "bg-white text-black hover:border-white hover:text-white" : "bg-black text-white hover:border-black hover:text-black"}  transition-colors duration-300`}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          height="24px"
          viewBox="0 -960 960 960"
          width="24px"
          class={`block sm:hidden ${black ? "fill-black" : "fill-white"}`}
          fill="#000"
          ><path
            d="M440-160v-487L216-423l-56-57 320-320 320 320-56 57-224-224v487h-80Z"
          ></path></svg
        >
        <span class="hidden sm:block text-sm uppercase font-heading"
          >Volver arriba</span
        >
      </button>
    </div>
    <div
      class={`flex items-center justify-end gap-2 font-heading uppercase ${black ? "text-neutral-400" : "text-neutral-600"}`}
    >
      <a
        href="https://www.instagram.com/bruugarcia_/"
        target="_blank"
        class={`cursor-pointer ${black ? "hover:text-white" : "hover:text-black"} transition-colors duration-300`}
        >Instragram</a
      >
      <a
        href="https://substack.com/@bruugarcia"
        target="_blank"
        class={`cursor-pointer ${black ? "hover:text-white" : "hover:text-black"} transition-colors duration-300`}
        >Substack</a
      >
    </div>
  </div>
</footer>

<script is:inline>
  document.addEventListener("astro:page-load", () => {
    const topButton = document.getElementById("top-button");
    if (!topButton) return;

    topButton.onclick = () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    };
  });
</script>
