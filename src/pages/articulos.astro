---
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";

const articulos = await getCollection("articulos");

const categories = ["Literatura", "Historia", "PolÃ­tica", "Nosotros", "Arte"];

const news = articulos
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .map((art) => ({
    slug: art.slug,
    title: art.data.title,
    subtitulo: art.data.subtitulo,
    categoria: art.data.categoria,
    imagen: art.data.imagen,
  }));
---

<Layout themeHeader={true}>
  <main class="w-full overflow-hidden">
    <section class="w-full pt-24 md:pt-32 flex items-center justify-center">
      <div class="container mx-auto px-4 sm:px-6 md:px-0 lg:px-8">
        <p class="uppercase text-[.8rem] md:text-[1rem] leading-[1.1em]">
          Filtrar por
        </p>
        <div
          class="container-category scroll-x-auto flex pb-2 pr-2 items-center mt-2 md:mt-4 gap-2 md:gap-4"
        >
          <button
            data-category={"todos"}
            class="category-btn-page text-[.8rem] md:text-[1rem] font-heading py-1 px-4 md:px-8 bg-transparent border border-dashed border-black rounded-[.2rem] cursor-pointer hover:bg-black hover:text-white duration-300 transition-colors"
          >
            Todos
          </button>
          {
            categories.map((cat) => (
              <button
                data-category={cat}
                class="category-btn-page text-[.8rem] md:text-[1rem] font-heading py-1 px-4 md:px-8 bg-transparent border border-dashed border-black rounded-[.2rem] cursor-pointer hover:bg-black hover:text-white duration-300 transition-colors"
              >
                {cat}
              </button>
            ))
          }
        </div>
        <div class="w-full border-t-2 border-dashed border-black mt-3 md:mt-5">
        </div>
      </div>
    </section>
    <section
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-4 gap-y-4 lg:gap-y-6 container mx-auto px-4 sm:px-6 md:px-0 lg:px-8 py-4 sm:py-6 md:py-8"
    >
      {
        news.map((item) => (
          <a
            href={`/articulos/${item.slug}`}
            class="article-item-page"
            data-category={item.categoria}
          >
            <article class="relative group">
              <div class="absolute right-0 top-0 rounded-tr-[.2rem] z-1 px-3 py-1 bg-amber-300 uppercase font-heading font-bold text-xs">
                {item.categoria}
              </div>
              <div class="overflow-hidden rounded-[.2rem]">
                <img
                  src={item.imagen}
                  alt={item.title}
                  class="w-full h-auto aspect-video object-cover group-hover:scale-110 transition-transform duration-300"
                />
              </div>
              <h2 class="mt-2 text-lg md:text-xl font-bold font-heading text-pretty">
                {item.title}
              </h2>
              <p class="mt-1 text-sm md:text-base text-pretty">
                {item.subtitulo}
              </p>
            </article>
          </a>
        ))
      }
    </section>
    <Footer black={false} />
  </main>
</Layout>

<script is:inline>
  function initCategoryFilter() {
    const buttons = document.querySelectorAll(".category-btn-page");
    const articles = document.querySelectorAll(".article-item-page");

    if (!buttons.length || !articles.length) return;

    const setActiveButton = (activeBtn) => {
      buttons.forEach((btn) => {
        btn.classList.remove("bg-black", "text-white");
        btn.classList.add("bg-transparent", "text-black");
      });

      activeBtn.classList.remove("bg-transparent", "text-black");
      activeBtn.classList.add("bg-black", "text-white");
    };

    const showAllArticles = () => {
      articles.forEach((article) => {
        article.style.display = "";
      });
    };

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const category = btn.dataset.category;

        setActiveButton(btn);

        if (category === "todos") {
          showAllArticles();
          return;
        }

        articles.forEach((article) => {
          article.style.display =
            article.dataset.category === category ? "" : "none";
        });
      });
    });

    // Estado inicial
    const defaultBtn = document.querySelector('[data-category="todos"]');
    if (defaultBtn) {
      setActiveButton(defaultBtn);
      showAllArticles();
    }
  }

  // Astro transitions hook
  document.addEventListener("astro:page-load", initCategoryFilter);
</script>
